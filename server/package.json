{
  "name": "trichmind-server",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "description": "TrichMind MERN + TypeScript backend â€” secure REST API for ML-powered trichotillomania insights.",
  "main": "dist/server.js",
  "scripts": {
    "dev:stack": "docker compose -f docker-compose.dev.yml up --build",
    "dev": "nodemon --watch src --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.prod.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
