{
    "compilerOptions": {
        /* Output structure */
        "outDir": "./dist",
        "rootDir": "./src",
        /* Target environment */
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "Node",
        /* Type support */
        "types": [
            "node",
            "express"
        ],
        /* Interop + Imports */
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        /* Code quality */
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        /* Source maps for debugging */
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}