DOCKERIZED=true

PORT=8080
NODE_ENV=production

# Inside docker network (other containers reach this as "server:8080")
SERVER_URL=http://server:8080

# Use dockerized Mongo container
MONGO_URI=mongodb+srv://<username>:<db_password>@trichmind-prod-servers.iahxren.mongodb.net/?appName=TrichMind-Prod-Servers
DB_NAME=trichmind_db

# ML container name in docker-compose
ML_BASE_URL=http://ml:8000

# JWT (PROD â€” set strong values in your deployment secret manager)
JWT_SECRET=change-me-prod
JWT_REFRESH_SECRET=change-me-prod-refresh

# SMTP (prod)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# ðŸ¤– TrichBot / OpenAI
TRICHBOT_ENABLED=false
OPENAI_MODEL=gpt-4.1-mini

# Browser opens localhost:3000, but server may also see "web:3000" inside network.
CLIENT_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000,http://web:3000

RELAPSE_ALERT_THRESHOLD=0.7
LOG_DIR=./logs
